{
    "name": "drjele/doctrine-encrypt",
    "type": "symfony-bundle",
    "description": "Doctrine encrypt type",
    "keywords": [
        "doctrine",
        "encrypt"
    ],
    "homepage": "https://gitlab.com/drjele-utility/doctrine-encrypt",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Jeledintan",
            "email": "adrian.jeledintan@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "doctrine/doctrine-bundle": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "repositories": [
    ],
    "autoload": {
        "psr-4": {
            "Drjele\\DoctrineEncrypt\\": "src/"
        }
    },
    "scripts": {
        "install-hooks": [
            "[ $COMPOSER_DEV_MODE -eq 1 ] && rm -rf .git/hooks && ln -s ../scripts/git_hooks .git/hooks || exit 0"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "exclude": [
            "/scripts",
            "/.php_cs.dist",
            "/phpcs.xml.dist"
        ]
    }
}
