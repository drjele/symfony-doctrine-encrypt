{
    "name": "drjele/doctrine-encrypt",
    "type": "symfony-bundle",
    "description": "Doctrine encrypt type",
    "keywords": [
        "symfony",
        "doctrine",
        "encrypt",
        "decrypt"
    ],
    "homepage": "https://gitlab.com/drjele-symfony/doctrine-encrypt",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Jeledintan",
            "email": "adrian.jeledintan@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-openssl": "*",
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/orm": "^2.13",
        "drjele/symfony-console": "^1.2",
        "symfony/config": "^4.0|^5.0|^6.0"
    },
    "require-dev": {
        "drjele/symfony-phpunit": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.13",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Drjele\\Doctrine\\Encrypt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drjele\\Doctrine\\Encrypt\\Test\\": "tests/"
        }
    },
    "scripts": {
        "install-hooks": [
            "[ $COMPOSER_DEV_MODE -eq 1 ] && rm -rf .git/hooks && ln -s ../scripts/git_hooks .git/hooks || exit 0"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "exclude": [
            "/scripts",
            "/tests",
            "/.php-cs-fixer.dist.php",
            "/.php_cs.dist",
            "/phpcs.xml.dist",
            "/phpunit.xml.dist"
        ]
    }
}
